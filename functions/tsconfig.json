{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "types": ["node"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
